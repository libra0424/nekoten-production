<div class="card-header">
  ウチの子達
</div>
<% @cats.each do |cat| %>
  <div class="col-md-8 col-md-2 mx-auto">
    <div class="card-wrap">
      <div class="card">
        <div class="card-header align-items-center d-flex">
          <%= link_to cat_path(cat.id), class: "no-text-decoration" do %>
            <% if cat.profile_photo? %>
              <%= image_tag cat.profile_photo.thumb50.url,class: "post-profile-icon"  %>
            <% else %>
              <%=image_tag "default.jpg", :size => '100x100' %>
            <%end%>
            <%= cat.name %>
          <% end %>
          <% if cat.user_id == current_user.id %>
            <%= link_to  ":edit", edit_cat_path(cat), class:"badge badge-pill badge-primary" %>
            <%= link_to  cat_path(cat), method: :delete, class: "ml-auto mx-0 my-auto" do %>
              <div class="delete-post-icon">
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="devise-link">
  <%= link_to "ウチの子を追加する", new_cat_path, class: "btn btn-primary"  %>
</div>