<div class="card">
  <div class="card-body">
    <h1 class="card-title">
      <%= @user.name%>
      がフォローしているユーザー一覧
    </h1>

    <% if @user.followings.empty?%>
      フォローはいません
    <%end%>
    
    <% @user.followings.each do |user| %>
      <table>
        <tr>
          <td> <%= user.username %> </td>
          <td><%= link_to '詳細', user_path(user) %></td>
        </tr>
      </table>
    <%end%>
  </div>
</div>